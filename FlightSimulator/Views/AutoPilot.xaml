<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="textBox" Background="{Binding VM_Background}" Text="{Binding VM_Text}"></TextBox>
        <WrapPanel  Grid.Row="1" HorizontalAlignment="Center" >
            <Button Margin="15" Command="{Binding OKCommand}">OK</Button>
            <Button  Margin="15" Command="{Binding ClearCommand}">Clear</Button>
        </WrapPanel>
    </Grid>
</UserControl>
